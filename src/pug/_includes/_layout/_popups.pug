.popup__form#popup_consult
    .b-close
        span Закрыть
    .title-consultation
        span Получите бесплатную консультацию
    form(action='#').popup__inner-wrap.js_valid-from
        .inputs-wrap
            label.textarea-wrap
                p.text Оставьте свое сообщение в этой форме, чтобы получить ответ специалиста
                textarea.consult__textarea(neme='message' placeholder='Текст сообщения')
            label.input-wrap
                input.js_val(type='text' name='name' placeholder='Ваше имя')
                ico.status
            label.input-wrap
                input.js_val(type='email' name='email' placeholder='E-mail')
                ico.status
        .consult__submit-wrap
            button(type='reset').reset.js_reset Отмена
            button(type='submit').submit Отправить
